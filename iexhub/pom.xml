		<url>www.samhsa.hhs.gov</url>
	</organization>
	<description>Information Exchange Hub consists of connectors, services, and ransformation components intended to allow applications to interoperate with standards-based Health Information Exchange (HIE) organizations.</description>

	<scm>
		<url>https://github.com/FEISystems/iexhub</url>
		<connection>scm:git:https://github.com/FEISystems/iexhub.git</connection>
		<developerConnection>scm:git:https://github.com/FEISystems/iexhub.git</developerConnection>
	</scm>

	<ciManagement>
		<system>Jenkins</system>
		<url>http://BhitsBuild03/</url>
	</ciManagement>

	<distributionManagement>
		<repository>
			<id>deployment</id>
			<name>Internal Releases</name>
			<url>http://${maven.nexus.servername}/nexus/content/repositories/releases/</url>
		</repository>
		<snapshotRepository>
			<id>deployment</id>
			<name>Internal Releases</name>
			<url>http://${maven.nexus.servername}/nexus/content/repositories/snapshots/</url>
		</snapshotRepository>
	</distributionManagement>

	<properties>
		<maven.nexus.servername>BHITSMVNREP01</maven.nexus.servername>
		<docker.maven.version>0.4.3</docker.maven.version>
	</properties>
	<!-- Note: HAPI projects use the "hapi-fhir" POM as their base to provide 
		easy management. You do not need to use this in your own projects, so the 
		"parent" tag and it's contents below may be removed if you are using this 
		file as a basis for your own project. -->
	<parent>
		<groupId>ca.uhn.hapi.fhir</groupId>
		<artifactId>hapi-fhir</artifactId>
		<version>1.4</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<repositories>
		<repository>
			<id>central</id>
			<name>Maven Repository Switchboard</name>
			<layout>default</layout>
			<url>http://repo1.maven.org/maven2</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>

		<!-- CDA Tools Release (Third Party) - Contains 3rd party jars not available 
			on other Maven repositories -->
		<repository>
			<id>cdatoolsrelease-ext</id>
			<name>cdatools.com-releases-ext</name>
			<url>http://www.cdatools.com:8081/artifactory/ext-release-local</url>
		</repository>

		<!-- CDA Tools Release - Contains release dependencies -->
		<repository>
			<id>cdatoolsrelease-libs</id>
			<name>cdatools.com-releases-libs</name>
			<url>http://www.cdatools.com:8081/artifactory/libs-release-local</url>
		</repository>

		<!-- CDA Snapshot, Contains the latest stable build of cda plugins (consol,hitsp,etc) -->
		<repository>
			<id>cdatoolssnapshot</id>
			<name>cdatools.com-releases</name>
			<url>http://www.cdatools.com:8081/artifactory/libs-snapshot-local</url>
		</repository>

		<repository>
			<id>EclipseLink Repo</id>
			<url>http://www.eclipse.org/downloads/download.php?r=1&amp;nf=1&amp;file=/rt/eclipselink/maven.repo</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>
	<build>
		<!-- <sourceDirectory>src</sourceDirectory> -->
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<dependencies>
					<dependency>
						<groupId>org.apache.axis2</groupId>
						<artifactId>axis2-jaxbri</artifactId>
						<version>1.6.3</version>
					</dependency>
				</dependencies>
			</plugin>

			<plugin>
				<groupId>org.apache.axis2</groupId>
				<artifactId>axis2-mar-maven-plugin</artifactId>
				<version>1.6.3</version>
				<extensions>true</extensions>
			</plugin>
			<plugin>
				<groupId>com.spotify</groupId>
				<artifactId>docker-maven-plugin</artifactId>
				<version>${docker.maven.version}</version>
				<configuration>
					<imageName>${project.artifactId}</imageName>
					<dockerDirectory>src/main/docker</dockerDirectory>
					<buildArgs>
						<finalName>${project.build.finalName}.war</finalName>
					</buildArgs>
					<resources>
						<resource>
							<targetPath>/</targetPath>
							<directory>${project.build.directory}</directory>
							<include>${project.build.finalName}.war</include>
						</resource>
					</resources>
				</configuration>
			</plugin>
		</plugins>
	</build>
